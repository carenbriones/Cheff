<!--#################### CHEF SECTION #################################-->

<div class="container mb-4">
    <div class="row">

        <div class="col-12 col-lg-3 mt-1 mb-3">
            <div class="card">
                <img class="card-img-top" src={{chef.img_url}} alt="Card image cap">
                <div class="card-body">
                    <h4 class="card-title" id="chef-name">{{chef.name}}</h4>
                </div>
                <ul class="list-group list-group-flush" id="chef-attributes">
                    <li class="list-group-item" id="chef-email">{{chef.email}}</li>
                    <li class="list-group-item" id="chef-creationDate">{{chef.createdDate}}</li>
                </ul>
            </div>
        </div>

        <!--#################### END CHEF SECTION #################################-->

        <div class="col-12 order-second col-lg-9">


            <div class="card mt-1">
                <h5 class="card-header">Most Recent Recipes</h5>
                <div class="card-body">

                    <div class="row">


                        <!--EXAMPLE RECIPE CARD-->
                        <div class="col-12 col-sm-6 col-lg-4">
                            <div class="card mb-2">
                                <img class="card-img-top" src="https://via.placeholder.com/200" alt="Card image cap">
                                <div class="card-body">
                                    <h5 class="card-title">Delicious Recipe 1</h5>
                                    <a href="#" class="btn btn-block btn-primary">View Recipe</a>
                                </div>
                            </div>
                        </div>
                        <!--END EXAMPLE RECIPE CARD-->

                        {{#each recipes}}
                        <div class="col-12 col-sm-6 col-lg-4">
                            <div class="card mb-2">
                                <img class="card-img-top" src={{this.imgURL}} alt="Card image cap">
                                <div class="card-body">
                                    <h5 class="card-title">{{this.name}}</h5>
                                    <a href="/recipe/{{this.id}}" class="btn btn-block btn-primary">View Recipe</a>
                                </div>
                            </div>
                        </div>

                        {{/each}}



                    </div>

                </div>
            </div>
        </div>

    </div>

</div>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
<script type="text/javascript" src="js/profile.js"></script>